<h1>Music Facts</h1>
<p>Add a new music fact:</p>
<%= form_for @music_fact do |f| %>
    <%= f.label :fact %><br>
    <%= f.text_area :fact %><br>
    <%= f.submit %>
<% end %>

<h3>Previous Facts:</h3>
<ul>
    <% @music_facts.each do |music_fact| %>
        <li><%= music_fact.fact %></li>
    <% end %>
</ul>
